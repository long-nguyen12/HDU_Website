@model IEnumerable<HDU_Website.Controllers.NewsRouterViewModel>
<div class="home-tin-moi-left">
    <div class="row" style="padding: 5px; color: #000;">
        @foreach (var item in Model.Take(2))
        {
            string imageUrl = "http://media.hdu.edu.vn/" + item.News.HinhDaiDien;
            <div class="col-md-6 col-12">
                <div class="row">
                    <div class="col-6">
                        <a class="x-img "
                           title="@item.News.TieuDe"
                           href="@Url.Action("ChiTietTinTuc", "Home", new {id = item.News.ID})">
                            <img catcherror=""
                                 lazyload=""
                                 class="img-fluid"
                                 alt="@item.News.TieuDe"
                                 src="@imageUrl" />
                        </a>
                    </div>
                    <div class="col-6">
                        <p class="realease-date" style="margin-bottom: 5px; font-size: 14px;">
                            <i class="fa fa-calendar"></i><span>
                                @item.News.NgayTao
                            </span>
                        </p>
                        <a class="article-name"
                           title="@item.News.TieuDe"
                           href="@Url.Action("ChiTietTinTuc", "Home", new {id = item.News.ID})"
                           style="text-decoration: none; text-align: justify; font-size: 14px;">
                            @item.News.TieuDe
                        </a>
                        <p style="margin-top: 5px; font-size: 14px;">
                            <i class="fa fa-bookmark-o" aria-hidden="true"></i><span>
                                @item.DanhMuc.TenDanhMuc
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row" style="padding: 5px; color: #000;">
        @foreach (var item in Model.Skip(2))
        {
            string imageUrl = "http://media.hdu.edu.vn/" + item.News.HinhDaiDien;
            <div class="col-md-6 col-12">
                <div class="row">
                    <div class="col-6">
                        <a class="x-img "
                           title="@item.News.TieuDe"
                           href="@Url.Action("ChiTietTinTuc", "Home", new {id = item.News.ID})">
                            <img catcherror=""
                                 lazyload=""
                                 class="img-fluid"
                                 alt="@item.News.TieuDe"
                                 src="@imageUrl" />
                        </a>
                    </div>
                    <div class="information col-6">
                        <p class="realease-date" style="margin-bottom: 5px; font-size: 14px;">
                            <i class="fa fa-calendar"></i><span>
                                @item.News.NgayTao
                            </span>
                        </p>
                        <a class="article-name"
                           title="@item.News.TieuDe"
                           href="@Url.Action("ChiTietTinTuc", "Home", new {id = item.News.ID})"
                           style="text-decoration: none; text-align: justify; font-size: 14px;">
                            @item.News.TieuDe
                        </a>
                        <p style="margin-top: 5px; font-size: 14px;">
                            <i class="fa fa-bookmark-o" aria-hidden="true"></i><span>
                                @item.DanhMuc.TenDanhMuc
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>