@model IEnumerable<HDU_Website.Controllers.NewsRouterViewModel>
<style>
    .timeline {
        padding: 0px 5px 0px 5px;
        margin-bottom: 8px;
    }
    .timeline .event-timeline {
        border-bottom: 1px solid rgba(160, 160, 160, 0.2);
        position: relative;
    }

    .timeline-link:before {
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        margin-top: 22px;
        /*background: linear-gradient(90deg, transparent, white);*/
        background: linear-gradient(45deg, transparent 0%, white);
    }


    .timeline-link a {
        color: #000;
        text-decoration: none;
    }

        .timeline-link a:hover {
            text-decoration: none;
            color: #007bff;
        }
</style>

<div style="margin-bottom: 10px;">
    <h2 class="title-content"> <a href="@Url.Action("DanhMuc", "Home", new {idDanhMuc = ViewBag.IDGroup})">@ViewBag.NewsGroup</a></h2>
