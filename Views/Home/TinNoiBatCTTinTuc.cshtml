                        <div class="timeline-link">
                            <a style="text-decoration: none" href="@Url.Action("GetTinTucByAlias", new {alias = item.Router.Alias})" title="@item.News.TieuDe"> @item.News.TieuDe</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }
