@model IEnumerable<HDU_Website.Models.CMS_ThuVienAnh>

<div class="slider">
    <div class="owl-carousel-gallery owl-carousel owl-theme">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model.ElementAt(i);
            string imageUrl = "http://media.hdu.edu.vn/" + item.TenAnh;
            <div class="item">
                <img src="@imageUrl" class="d-block w-100" alt="...">
            </div>
        }
    </div>
</div>
<script>
    $('.owl-carousel-gallery').owlCarousel({
        items: 1,
        loop: true,
        margin: 10,
        autoplay: true,
        autoplayTimeout: 2000,
        autoplayHoverPause: true
    });
</script>