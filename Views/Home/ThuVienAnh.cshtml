@model IEnumerable<HDU_Website.Models.CMS_ThuVienAnh>

<div class="slider">
    <div id="carouselGalleryControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);
                string imageUrl = "http://media.hdu.edu.vn/" + item.TenAnh;
                if (i == 0)
                {

                    <div class="carousel-item active">
                        <img src="@imageUrl" class="d-block w-100" alt="...">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@imageUrl" class="d-block w-100" alt="...">
                    </div>
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselGalleryControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselGalleryControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>