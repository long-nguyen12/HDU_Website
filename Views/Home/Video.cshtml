@model IEnumerable<HDU_Website.Models.CMS_Video>

<div class="col-sm-12 col-lg-12" style="margin-bottom: 10px;">
    @{
        if (Model != null)
        {
            var highlight = Model.FirstOrDefault();
            if (highlight != null)
            {
                <div>
                    <iframe id="video-home" src="@highlight.LinkVideo" width="400" height="400" style="border:0;width:100%" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>
            }
        }
    }

</div>
<div class="col-sm-12 col-lg-12" style="overflow-y: scroll; height:300px; margin-bottom: 10px;">
    <ul class="list-group">
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <li>
                        <a href="#" class="change-video" data-video="@item.LinkVideo">
                            <p class="release-date" style="font-size: 14px;">
                                <i class="fa fa-video-camera" aria-hidden="true"></i>
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <span>@item.NgayTao.Value.ToString("dd/MM/yyyy")</span>
                            </p>
                            <p style="font-size: 14px;">
                                @item.TieuDe
                            </p>
                        </a>
                        <div class="video-line" />
                    </li>
                }
            }
        }
    </ul>
</div>

<script type="text/javascript">
    $(function () {
        //Click event for the image links
        $('.change-video').click(function (e) {
            e.preventDefault();
            e.stopPropagation();
            let videoLink = $(this).data('video');
            $('#video-home').attr('src', videoLink);
        });

        //Display the first link
        $('#video-home').attr('src', $('ul li:first-child a.change-image').data($(this).data('video')));
    });
</script>


