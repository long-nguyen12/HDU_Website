@model IEnumerable<HDU_Website.Models.CMS_TinTuc>

<div class="tin-noi-bat" style="margin-bottom: 10px;">
    <div class="row row-cols-md-2 row-cols-sm-1">
        @foreach (var item in Model)
        {
            string imageUrl = "http://media.hdu.edu.vn/" + item.HinhDaiDien;
            string baiviet = "#";
            string mota = item.MoTa.Substring(0, 80) + "...";
            <a href="@baiviet">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="row row-cols-1">
                        <div class="col-6">
                            <img class="img-fluid" catcherror="" lazyload="" src="@imageUrl" alt="@item.TieuDe" />
                        </div>
                        <div class="col-6">
                            <h6>@item.TieuDe</h6>
                            <p>@mota</p>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
